{
    "name": "DeepForge (PyTorch)",
    "build": {
        "dockerfile": "../../Dockerfile.pytorch",
        "target": "pytorch-base"
    },
    "runArgs": [
        "--gpus",
        "all",
        "--ipc=host",
        "--ulimit",
        "memlock=-1",
        "--ulimit",
        "stack=67108864",
        "--env-file",
        ".env.container",
        "--env-file",
        ".env.deepforge",
        "--volume",
        "${env:METRON_AI_CATALOGUE_HOST_PATH}:/mnt/catalogue"
    ],
    "postStartCommand": "./.devcontainer/devcontainer_post_start.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "njpwerner.autodocstring",
                "eamodio.gitlens",
                "github.copilot",
                "github.copilot-chat",
                "github.vscode-github-actions",
                "charliermarsh.ruff"
            ]
        }
    },
    "remoteUser": "ubuntu"
}